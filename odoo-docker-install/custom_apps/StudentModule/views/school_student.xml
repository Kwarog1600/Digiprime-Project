<?xml version="1.0" encoding="utf-8"?>
    <odoo>
    <!--Form-->
    <record id="student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Add New Student">
                <sheet>
                    <!-- Existing groups and fields -->
                    <group string="Attach Photo">
                        <field name="photo" widget="image" style="width: 150px; height: 150px;"/>
                    </group>
                    <group>
                        <field name="studentId"/>
                    </group>
                    <group string="Basic Information">
                            <field name="surname"/>
                            <field name="firstname"/>
                            <field name="midname"/>
                    </group>
                    <group string="Others">
                        <field name="gender" />
                        <field name="birthdate"/>
                        <field name="birthplace" />
                        <field name="age" />
                    </group>
                    <group string="Emergency Contacts">
                        <field name="em_contact">
                            <tree>
                                <field name="name"/>
                                <field name="relationship"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Search-->
    <record id="student_search" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search string="Students">
                
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="student_kanban" model="ir.ui.view">
        <field name="name">school.student.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                            <field name="photo" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                                <div class="oe_kanban_title">
                                    <span class="oe_kanban_record_id">
                                        <field name="studentId"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_content">
                                    <ul>
                                        <li>
                                            <field name="surname"/>
                                        </li>
                                        <li>
                                            <field name="firstname"/>
                                        </li>
                                        <li>
                                            <field name="midname"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!--Tree-->
    <record id="student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
                <tree string="">
                    <field name="studentId" />
                    <field name="surname" />
                    <field name="firstname" />
                    <field name="midname" />
                </tree>  
        </field>
    </record>

    <!--Action-->
    <record id="stList_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'kanban', 'view_id': ref('student_kanban')}),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('student_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('student_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_no_content_smiling_face">
                Add New Student!
            </p>
        </field>
    </record>

    <menuitem
        id="Students_root"
        name="Students"
       
        sequence="10"/>

    <menuitem
        id="add_new_student"
        name="Add New Student"
        parent="Students_root"
        action="StudentModule.stList_action"
        sequence="10"/>
        
    <menuitem
        id="st_courses"
        name="Student List"
        parent="Students_root"
        sequence="10"/>
    </odoo>
